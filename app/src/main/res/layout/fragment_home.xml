<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    tools:context=".fragments.HomeFragment">


    <TextView
        android:id="@+id/txtLabelLutemons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Valitse Lutemon:" />

    <LinearLayout
        android:id="@+id/llHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLabelLutemons"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/txtLabelPlaces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llHome"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Siirr채 Lutemon:" />

    <RadioGroup
        android:id="@+id/rgHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLabelPlaces"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/rbHomeToTrain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Treenikent채lle" />

        <RadioButton
            android:id="@+id/rbHomeToFight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taistelukent채lle" />

    </RadioGroup>

    <Button
        android:id="@+id/btnHomeTransfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgHome"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:text="Siirr채" />

</RelativeLayout>